<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="7dp"
    android:background="@color/glossblack">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/normani"
        android:id="@+id/songListSongImage"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/songListSongImage"
        android:orientation="vertical"

        >
    <TextView
        android:text="Single-line text view twidget"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:focusable="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:textColor="#fff"
        android:id="@+id/songListSongName"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:text="Single-line text view twidget"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:textColor="#fff"
            android:id="@+id/songListSongArtist"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <ImageView
        android:layout_width="27dp"
        android:layout_height="35dp"
        android:src="@drawable/song_options"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:id="@+id/play_pause_current_song"/>


</RelativeLayout>