<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/proximanovasemibold"
            android:textSize="28sp"
            android:gravity="center"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               android:padding="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Symphony Premium"
                    android:textSize="15sp"
                    android:layout_marginBottom="7dp"
                    android:fontFamily="@font/proximanovasemibold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/proximanovasemibold"
                    android:layout_marginBottom="15dp"


                    android:text="Just Rs 119/month. Cancel Anytime"/>
                <Button
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="GET PREMIUM"
                    android:elevation="16dp"
                    android:fontFamily="@font/proximanovasemibold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="15dp"

                    android:background="@drawable/google_button_bg"
                    app:layout_anchorGravity="bottom|center"
                    android:textColor="@android:color/black"
                    android:id="@+id/premium_button1"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/proximanovasemibold"
                    android:text="* Terms and Conditions Apply"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prepaid"
        android:textColor="#fff"
        android:fontFamily="@font/proximanovasemibold"
        android:textSize="28sp"
        android:gravity="center"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symphony Premium"
                android:textSize="15sp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/proximanovasemibold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/proximanovasemibold"
                android:layout_marginBottom="15dp"

                android:text="Just Rs 130 for 1 month"/>
            <Button
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="GET PREMIUM"
                android:elevation="16dp"
                android:fontFamily="@font/proximanovasemibold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"

                android:background="@drawable/google_button_bg"
                app:layout_anchorGravity="bottom|center"
                android:textColor="@android:color/black"
                android:id="@+id/premium_button3"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/proximanovasemibold"
                android:text="* Terms and Conditions Apply"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student"
        android:textColor="#fff"
        android:fontFamily="@font/proximanovasemibold"
        android:textSize="28sp"
        android:gravity="center"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symphony Premium"
                android:textSize="15sp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/proximanovasemibold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/proximanovasemibold"
                android:layout_marginBottom="15dp"


                android:text="As much as 50 % off for Students"/>
            <Button
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="GET PREMIUM"
                android:elevation="16dp"
                android:fontFamily="@font/proximanovasemibold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"

                android:id="@+id/premium_button2"

                android:background="@drawable/google_button_bg"
                app:layout_anchorGravity="bottom|center"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/proximanovasemibold"
                android:text="* Terms and Conditions Apply"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


